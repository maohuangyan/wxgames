/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.play{
  margin-left: 12rpx;
}
.red{
  color: red;
}
.icon-shoubing{
  font-size: 42rpx;
}
.icon-good{
  font-size: 36rpx;
  margin-top: -10rpx;
}
.icon-gengduo{
  margin-top: -14rpx;
  color: #999;
}
.icon-huojian{
  font-size: 38rpx;
}
.icon-bulb{
  font-size: 42rpx;
  margin-top: -8rpx;
}
.icon-xiaolian{
  font-size: 38rpx;
  margin-top: -8rpx;
}
.games-box{
  box-shadow: 0 6rpx 6rpx rgba(112, 110, 110, 0.1)
}
.game{
  width: 25%;
}
.game > view{
  font-size: 26rpx;
  line-height: 40rpx;
}
.game > text{
  color: #999;
  font-size: 18rpx;
}
.game image{
  width: 126rpx;
  height: 126rpx;
  border-radius: 8rpx;
  background: #aaa;
}
.advs image{
  width: 300rpx;
  height: 180rpx;
  border-radius: 8rpx;
  background: #aaa;

}
.adv{
  width: 50%;
}